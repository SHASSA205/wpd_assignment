<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/five_sp">

                <ImageView
                    android:id="@+id/location_map"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_map_location"
                    android:scaleType="fitXY"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tittle"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_sp"
                        android:gravity="center_vertical"
                        android:text="@string/tittle"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tittle_data"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/five_sp"
                        android:layout_marginTop="@dimen/five_sp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/description_tittle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/five_sp"
                        android:text="@string/description"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:layout_marginStart="@dimen/five_sp"
                        android:layout_marginTop="@dimen/five_sp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/fifteen_sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fifteen_sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>